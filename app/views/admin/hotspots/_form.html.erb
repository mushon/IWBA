
<%= form_for [:admin, @hotspot], :html => {:class => 'form-horizontal'} do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Name', :class => 'col-md-2 control-label' %>
    <div class="col-md-5">
      <%= f.text_field :name, :class => 'form-control', :placeholder => 'Name' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :lon, 'Longtitude', :class => 'col-md-2 control-label' %>
    <div class="col-md-5">
      <%= f.text_field :lon, :class => 'form-control', :placeholder => 'Longtitude' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :lat, 'Latitude', :class => 'col-md-2 control-label' %>
    <div class="col-md-5">
      <%= f.text_field :lat, :class => 'form-control', :placeholder => 'Latitude' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit 'Save', :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>