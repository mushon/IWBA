<%= render 'tab' %>
<h3> 
  All Countries
</h3>

<table class="table table-striped">
  <tr>
    <th>
      #
    </th>
    <th>
      Name
    </th>
    <th>
      Amount
    </th>
  </tr>
  <% @countries.each do |country| %>
  <tr>
    <td><%= country.id %></td>
    <td><%= link_to country.name, edit_admin_country_path(country) %></td>
    <td><%= number_to_pound(country.amount / 100) %></td>
  </tr>
  <% end %>
</table>

<%= link_to 'New Country', new_admin_country_path, :class => 'btn btn-default' %>
